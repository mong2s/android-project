<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestfulSampleActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sample2_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/sample2_PrevButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sample2_recycleview" />

    <Button
       android:id="@+id/sample2_NextButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="NextSample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sample2_recycleview" />


</androidx.constraintlayout.widget.ConstraintLayout>